<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Аватар -->
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/contactAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_person"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/surface"
                app:tint="@color/text_secondary"
                />

            <!-- Индикатор статуса -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@id/contactAvatar"
                android:layout_alignEnd="@id/contactAvatar"
                android:background="@drawable/circle_status_online" />

        </RelativeLayout>

        <!-- Информация о контакте -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Статус"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Время последней активности -->
        <TextView
            android:id="@+id/lastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2ч назад"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>