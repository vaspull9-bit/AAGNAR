<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chat_background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ЛЕВАЯ ЧАСТЬ: стрелка + статус + название -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Стрелка назад -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="36dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Назад" />

                <!-- Статус контакта -->
                <View
                    android:id="@+id/contactStatusIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_status_online" />

                <!-- Название контакта -->
                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Contact Name"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- ПРАВАЯ ЧАСТЬ: иконки действий -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Телефон -->
                <ImageButton
                    android:id="@+id/voiceCallButton"
                    android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_call"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Голосовой звонок" />

                <!-- Видео -->
                <ImageButton
                    android:id="@+id/videoCallButton"
                    android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_videocam"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Видеозвонок" />

                <!-- Безопасность -->
                <ImageButton
                    android:id="@+id/encryptionButton"
                    android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_lock"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Безопасное соединение" />

                <!-- Троеточие -->
                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Меню чата" />

            </LinearLayout>

        </RelativeLayout>




    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Статус соединения -->
    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status_offline"
        android:gravity="center"
        android:padding="4dp"
        android:text="Нет соединения"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Список сообщений -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp" />

    <!-- Обертка для панели ввода -->
    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Панель ввода сообщения -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Кнопка вложения -->
                <ImageButton
                    android:id="@+id/attachButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_attach"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Прикрепить файл" />

                <!-- Поле ввода -->
                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    android:background="@null"
                    android:hint="Введите сообщение..."
                    android:imeOptions="actionSend"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <!-- Кнопка записи голоса -->
                <ImageButton
                    android:id="@+id/voiceRecordButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_mic"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Запись голоса" />

                <!-- Кнопка отправки -->
                <ImageButton
                    android:id="@+id/sendButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_send"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Отправить" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Панель записи голоса -->
    <LinearLayout
        android:id="@+id/recordingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/recordingDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>