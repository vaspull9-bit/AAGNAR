<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chat_background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Кнопка назад -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Назад" />

            <!-- Информация о контакте -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Name"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contactStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="online"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Кнопки действий -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/voiceCallButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_call"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Голосовой звонок" />

                <ImageButton
                    android:id="@+id/videoCallButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_videocam"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Видеозвонок" />

                <!-- Добавляем в тулбар после кнопок звонков -->
                <ImageButton
                    android:id="@+id/encryptionButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_lock"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Безопасное соединение" />


            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Статус соединения -->
    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status_offline"
        android:gravity="center"
        android:padding="4dp"
        android:text="Нет соединения"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Список сообщений -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp" />

    <!-- Панель ввода сообщения -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Кнопка вложения -->
            <ImageButton
                android:id="@+id/attachButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_attach"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Прикрепить файл" />

            <!-- Поле ввода -->
            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:background="@null"
                android:hint="Введите сообщение..."
                android:imeOptions="actionSend"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Кнопка отправки -->
            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Отправить" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>